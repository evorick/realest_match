      <div class="field">
        <%= f.label :last_name %><br>
        <%= f.text_field :last_name, class: "form-control" %>
      </div>
      <div class="field">
        <%= f.label :phone_number %><br>
        <%= f.text_field :phone_number, class: "form-control" %>
      </div>
      <div class="field">
        <%= f.label :email %><br>
        <%= f.text_field :email, class: "form-control" %>
      </div>
      <div class="field">
        <%= f.label "Number of bedrooms wanted" %><br>
        <%= f.select :number_bedrooms, options_for_select(min_rooms) %>
      </div>
      <div class="field">
        <%= f.label "Number of bathroms wanted" %><br>
        <%= f.select :number_bathrooms, options_for_select(min_baths) %>
      </div>

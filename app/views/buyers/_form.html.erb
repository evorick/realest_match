        <%= f.label "Desired city" %><br>
        <%= f.text_field :city, class: "form-control" %>
      </div>
      <div class="field">
        <%= f.label "Desired state" %><br>
        <%= f.select :state, options_for_select(us_states) %>
      </div>
      <div class="field">
        <%= f.label :min_price %><br>
        <%= f.select :min_price, options_for_select(min_price) %>

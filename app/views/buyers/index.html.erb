<p id="notice"><%= notice %></p>

<h1>Listing Buyers</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Phone number</th>
      <th>Email</th>
      <th>Number bedrooms</th>
      <th>Number bathrooms</th>
      <th>City</th>
      <th>State</th>
      <th>Min price</th>
      <th>Max price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @buyers.each do |buyer| %>
      <tr>
        <td><%= buyer.first_name %></td>
        <td><%= buyer.last_name %></td>
        <td><%= buyer.phone_number %></td>
        <td><%= buyer.email %></td>
        <td><%= buyer.number_bedrooms %></td>
        <td><%= buyer.number_bathrooms %></td>
        <td><%= buyer.city %></td>
        <td><%= buyer.state %></td>
        <td><%= buyer.min_price %></td>
        <td><%= buyer.max_price %></td>
        <td><%= link_to 'Show', buyer %></td>
        <td><%= link_to 'Edit', edit_buyer_path(buyer) %></td>
        <td><%= link_to 'Destroy', buyer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Buyer', new_buyer_path %>

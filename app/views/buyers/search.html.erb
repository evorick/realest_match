
<div class="container container-fluid top-margin-reduction">
  <h1>Search for Buyers for your Home</h1>

  <%= render 'searchform' %>

  <br>
  <div id="results">
    <table class="table table-striped">
        <thead>
          <tr>
            <th><%= @buyers.count %> Potential Buyers!</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @buyers.each do |buyer| %>
            <tr>
              <td>Anonymous buyer from &nbsp</td>
              <td><%= buyer.city %>&nbsp</td>
              <td><%= buyer.state %></td>
            </tr>
          <% end %>
        </tbody>
      </table> 
  </div>
</div>

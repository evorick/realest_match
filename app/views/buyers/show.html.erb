<div class="container top-margin-reduction">
  <div class="form-signin">
    <p>
      <strong>First name:</strong>
      <%= @buyer.first_name %>
    </p>

    <p>
      <strong>Last name:</strong>
      <%= @buyer.last_name %>
    </p>

    <p>
      <strong>Phone number:</strong>
      <%= @buyer.phone_number %>
    </p>

    <p>
      <strong>Email:</strong>
      <%= @buyer.email %>
    </p>

    <p>
      <strong>Number bedrooms:</strong>
      <%= @buyer.number_bedrooms %>
    </p>

    <p>
      <strong>Number bathrooms:</strong>
      <%= @buyer.number_bathrooms %>
    </p>

    <p>
      <strong>City:</strong>
      <%= @buyer.city %>
    </p>

    <p>
      <strong>State:</strong>
      <%= @buyer.state %>
    </p>

    <p>
      <strong>Min price:</strong>
      <%= @buyer.min_price %>
    </p>

    <p>
      <strong>Max price:</strong>
      <%= @buyer.max_price %>
    </p>

    <%= link_to 'Edit', edit_buyer_path(@buyer) %> |
    <%= link_to 'Back', buyers_path %>
  </div>
</div>

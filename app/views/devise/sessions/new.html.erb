
<div class="container">
  <div class="form-signin" >
    <h2 class="form-signin-heading">Admin Login</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      
      <div class="field">
        <%= f.email_field :email, id: "inputEmail", class: "form-control", placeholder: "Email address", autofocus: true %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "off", id: "inputPassword", class: "form-control", placeholder: "Password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Login", class: "btn btn-lg btn-primary btn-block" %>
      </div>

    <% end %>
    <br>
    <%= render "devise/shared/links" %>
  </div>
</div>